                android:text="1,2,3,4,5"
                android:textColor="#ff0000"
                android:textSize="25sp" />
        </LinearLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#cbcaca"/>
    </LinearLayout>


</layout>